    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const reelsContainer = document.getElementById('reelsContainer');
            const progressBar = document.getElementById('progressBar');
            const uploadBtn = document.getElementById('uploadBtn');
            const uploadModal = document.getElementById('uploadModal');
            const closeModal = document.getElementById('closeModal');
            const uploadFromDevice = document.getElementById('uploadFromDevice');
            const uploadFromGithub = document.getElementById('uploadFromGithub');
            const videos = document.querySelectorAll('video');
            const likeButtons = document.querySelectorAll('.action-btn.like');
            
            // Προσθήκη scroll snapping για reels
            reelsContainer.addEventListener('scroll', function() {
                const scrollTop = reelsContainer.scrollTop;
                const scrollHeight = reelsContainer.scrollHeight - reelsContainer.clientHeight;
                const scrollProgress = (scrollTop / scrollHeight) * 100;
                progressBar.style.width = `${scrollProgress}%`;
                
                // Παύση όλων των βίντεο
                videos.forEach(video => {
                    video.pause();
                });
                
                // Εύρεση του τρέχοντος reel και αναπαραγωγή του βίντεο
                const reels = document.querySelectorAll('.reel');
                reels.forEach((reel, index) => {
                    const reelTop = reel.offsetTop - reelsContainer.offsetTop;
                    const reelBottom = reelTop + reel.offsetHeight;
                    
                    if (scrollTop >= reelTop && scrollTop < reelBottom) {
                        videos[index].play();
                    }
                });
            });
            
            // Αυτόματη αναπαραγωγή του πρώτου βίντεο
            if (videos.length > 0) {
                videos[0].play();
            }
            
            // Άνοιγμα modal ανεβάσματος
            uploadBtn.addEventListener('click', function() {
                uploadModal.classList.add('active');
            });
            
            // Κλείσιμο modal
            closeModal.addEventListener('click', function() {
                uploadModal.classList.remove('active');
            });
            
            // Λειτουργία ανεβάσματος από συσκευή
            uploadFromDevice.addEventListener('click', function() {
                alert('Θα ανοίξει η φωτογραφική μηχανή ή η βιβλιοθήκη βίντεο της συσκευής σας. Σε πραγματική εφαρμογή, εδώ θα μπορούσατε να επιλέξετε βίντεο από το κινητό σας.');
                uploadModal.classList.remove('active');
            });
            
            // Λειτουργία ανεβάσματος από GitHub
            uploadFromGithub.addEventListener('click', function() {
                alert('Θα ανοίξει ένα παράθυρο για εισαγωγή GitHub URL. Σε πραγματική εφαρμογή, εδώ θα μπορούσατε να εισάγετε ένα link από GitHub repository.');
                uploadModal.classList.remove('active');
            });
            
            // Λειτουργία Like
            likeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const icon = this.querySelector('i');
                    const countElement = this.querySelector('.action-count');
                    
                    if (icon.classList.contains('fas')) {
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        let count = parseInt(countElement.textContent);
                        countElement.textContent = (count - 1).toLocaleString();
                    } else {
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        let count = parseInt(countElement.textContent.replace(/\D/g, ''));
                        countElement.textContent = (count + 1).toLocaleString();
                    }
                });
            });
            
            // Προσομοίωση κλικ στα βίντεο για παύση/αναπαραγωγή
            videos.forEach(video => {
                video.addEventListener('click', function() {
                    if (this.paused) {
                        this.play();
                    } else {
                        this.pause();
                    }
                });
            });
            
            // Προσομοίωση διπλού κλικ για like
            videos.forEach((video, index) => {
                let lastTap = 0;
                video.addEventListener('click', function(e) {
                    const currentTime = new Date().getTime();
                    const tapLength = currentTime - lastTap;
                    
                    if (tapLength < 300 && tapLength > 0) {
                        // Double tap detected - like the reel
                        likeButtons[index].click();
                        
                        // Show heart animation
                        const heart = document.createElement('div');
                        heart.innerHTML = '<i class="fas fa-heart" style="font-size: 80px; color: #ff375f; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 10;"></i>';
                        heart.style.position = 'absolute';
                        heart.style.top = e.clientY + 'px';
                        heart.style.left = e.clientX + 'px';
                        heart.style.transform = 'translate(-50%, -50%)';
                        heart.style.zIndex = '10';
                        heart.style.pointerEvents = 'none';
                        heart.style.animation = 'heartBeat 0.6s ease-out forwards';
                        
                        document.querySelector('.reel').appendChild(heart);
                        
                        setTimeout(() => {
                            heart.remove();
                        }, 600);
                    }
                    
                    lastTap = currentTime;
                });
            });
            
            // Add CSS for heart animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes heartBeat {
                    0% { transform: translate(-50%, -50%) scale(0); opacity: 1; }
                    50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; }
                    100% { transform: translate(-50%, -50%) scale(1); opacity: 0; }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>
